<div id="footer">
	<ul>
		<li><%= link_to_unless_current 'Home', '/' %></li>
		<li class="list_separator">|</li>
		<li><%= link_to_unless_current 'About Us', '/about_us' %></li>
		<li class="list_separator">|</li>
		<li><%= link_to_unless_current 'Privacy',  '/privacy' %></li>
		<li class="list_separator">|</li>
