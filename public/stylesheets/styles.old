body {
   font-size: 0.9em;
   font-family: Verdana, Arial, sans-serif;
}

/* HTML element styles */

p {
   margin-top: 0px;
	margin-bottom: 10px;
}

h1 {
   font-size: 1.1em;
   font-weight: normal;
   width: 100%;
   color: #008;
   border-bottom: 1px #008 solid;
   margin-bottom: 10px;
}

h2 {
   font-size: 1.0em; 
	font-weight: normal;
   color: #008;
}

h2 a:link, h2 a:visited {
  color: #000088;
  text-decoration: underline;
}

h2 a:hover {
  text-decoration: underline;
}

h3 {
  font-size: 0.9em;
  color: #cc0000;
  margin-top: 1.5em;
  margin-bottom: 1.5em;
}

h4 {
  font-size: 0.9em;
  color: #000000;
}

h5 {
  font-size: 0.9em;
  color: #004CB2;
}

ol, blockquote {
   margin-left: 30px;
   margin-right: 30px;
}

/* Misc */

.buffer {
	margin:10px 0px 50px 10px;
}

table.form th {
  text-align: right;
  vertical-align: top;
}

table.form td {
  text-align: left;
  vertical-align: bottom;
  padding-bottom: 5px;
}

table.form table.form td {
  padding-bottom: 0;
}
